{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "noImplicitAny": false,
    "removeComments": true,
    "outDir": "build"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules/**/*", "dist/**/*"]
}
